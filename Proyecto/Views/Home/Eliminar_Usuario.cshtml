
@{
    ViewBag.Title = "Eliminar_Usuario";

    if (Proyecto.Models.Credenciales.u_tipo == "ADMIN")
    {
        Layout = "~/Views/Shared/Layout_Admin.cshtml";
    }
    else
    {
        if (Proyecto.Models.Credenciales.u_tipo == "GUEST")
        {
            Layout = "~/Views/Shared/Layout_Guest.cshtml";
        }
        else
        {
            if (Proyecto.Models.Credenciales.u_tipo == "")
            {
                Response.Redirect("Index");
            }
        }
    }

}


@model Proyecto.Models.Login

<!DOCTYPE html>

<title>W3.CSS Template</title>
<html>
<body style="background-color:#E7E9EB">
    <div id="cuerpo" onclick="Cerrar_Usuario_Notificaciones()">
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Oswald">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open Sans">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <style>
            h1, h2, h3, h4, h5, h6 {
                font-family: "Oswald"
            }

            body {
                font-family: "Open Sans"
            }
        </style>

        <div class="w3-content w3-white" style="max-width:1400px;min-height:875px">

            <!-- Header -->
            <header class="w3-container w3-center w3-padding-48 w3-white">
                <h1 class="w3-xxxlarge"><b>ELIMINAR USUARIO</b></h1>
            </header>
            <div class="w3-container w3-center w3-white" style="font-size:20px">
                <img src="~/Imagenes/cancelado.png" alt="Inicio" style="width:20%">
                <br /><br />
                <h4 style="color:red; font-size:30px">¿Eliminar el usuario con la cédula @ViewBag.Cedula?</h4>
                <br />
                @using (Html.BeginForm())
                {
                    @Html.TextBoxFor(x => x.id_persona, new { @type = "hidden" });
                    @Html.TextBoxFor(x => x.cedula, new { @type = "hidden" });
                    <a href=@Url.Action("Mostrar_Usuarios", "Home") class="w3-button w3-blue" style="text-align:center"><i class="fa fa-arrow-left"></i> Volver</a> <input class="w3-button w3-red" type="submit" value="Eliminar">
                }

                <br /><br />
            </div>
            <br />
            <br /><br /><br /><br /><br />
        </div>



    </div>
</body>
</html>